// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "postgresql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "foreignKeys"
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String                 @db.Uuid @id @default(uuid())
  username  String                 @unique
  password  String                 @db.VarChar(255)
  email     String                 @unique
  role      Role                   @default(USER)
  lastSeen  DateTime?
  token     AccessToken?
  playlists Playlist[]
  favorites Favorite[]
  shared    PlaylistAcessControl[]

  @@map("user")
}

model AccessToken {
  id         String   @db.Uuid @id @default(uuid())
  validUntil DateTime @map("valid_until")
  userId     String   @db.Uuid @map("user")
  user       User     @relation(references: [id], onDelete: Cascade, fields: [userId], map: "access_token_user_fkey")

  @@map("access_token")
}

model Track {
  id         String   @db.Uuid @id @default(uuid())
  name       String
  position   Int      @default(0)
  playlistId String   @db.Uuid @map("playlist")
  playlist   Playlist @relation(references: [id], onDelete: Cascade, fields: [playlistId], map: "track_playlist_fkey")

  @@unique([playlistId, position])
  @@map("track")
}

model Playlist {
  id        String                 @db.Uuid @id @default(uuid())
  name      String
  isPublic  Boolean                @default(false)
  ownerId   String                 @db.Uuid @map("owner")
  owner     User                   @relation(references: [id], onDelete: Cascade, fields: [ownerId], map: "playlist_owner_fkey")
  tracks    Track[]
  favorites Favorite[]
  users     PlaylistAcessControl[]

  @@map("playlist")
}

model Favorite {
  userId     String   @db.Uuid @map("user")
  playlistId String   @db.Uuid @map("playlist")
  user       User     @relation(references: [id], onDelete: Cascade, fields: [userId], map: "favorite_user_fkey")
  playlist   Playlist @relation(references: [id], onDelete: Cascade, fields: [playlistId], map: "favorite_playlist_fkey")

  @@id([userId, playlistId])
  @@map("favorite")
}

model PlaylistAcessControl {
  userId     String   @db.Uuid @map("user")
  playlistId String   @db.Uuid @map("playlist")
  user       User     @relation(references: [id], onDelete: Cascade, fields: [userId], map: "playlist_access_control_user_fkey")
  playlist   Playlist @relation(references: [id], onDelete: Cascade, fields: [playlistId], map: "playlist_access_control_playlist_fkey")

  @@id([userId, playlistId])
  @@map("playlist_access_control")
}
